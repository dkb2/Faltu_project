<h1>Edit Sports blog</h1>
<%=form_for @blogs do |f| %>
<%if @blogs.errors.any? %>
<h2>Errors:</h2>
<ul>
<%@blogs.errors.full_messages.each do |m| %>
<li><%= m %></li>
<%end%>
</ul>
<%end%>
<p>
<%=f.label :name %><br/>
<%=f.text_field :name %>
</p>
<p>
<%=f.label :content %><br/>
<%=f.text_area :content %>
</p>
<p>
<%=f.submit "Update blog" %>
</p>
<%end%>